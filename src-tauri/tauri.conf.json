{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Morgan-Bevy",
  "version": "0.3.5",
  "identifier": "com.morgan-bevy.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Morgan-Bevy",
        "width": 1200,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "longDescription": "A hybrid 3D level editor for Bevy game development combining procedural generation with professional manual editing capabilities.",
    "shortDescription": "3D Level Editor for Bevy",
    "targets": "all"
  }
}